<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ThemeBackground"
    tools:context=".ui.authetication.signUp.SigupScreenActivity">

    <TextView
        android:id="@+id/tvSignUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/SignUp_title_textview"
        android:textColor="@color/TitleText"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/rounded_edittext_background"
        android:backgroundTint="@color/ThemeTextField"
        android:ems="10"
        android:hint="@string/SignUp_username_hint"
        android:inputType="text"
        android:paddingHorizontal="20dp"
        android:textColor="#888888"
        android:textColorHint="@color/HindTextField"
        app:layout_constraintTop_toBottomOf="@id/tvSignUpTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtEmailSignup"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/rounded_edittext_background"
        android:backgroundTint="@color/ThemeTextField"
        android:ems="10"
        android:hint="@string/SignUp_email_hint"
        android:inputType="text"
        android:paddingHorizontal="20dp"
        android:textColor="#888888"
        android:textColorHint="@color/HindTextField"
        app:layout_constraintTop_toBottomOf="@id/edtUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/rounded_edittext_background"
        android:backgroundTint="@color/ThemeTextField"
        android:ems="10"
        android:hint="@string/SignUp_phone_hint"
        android:inputType="text"
        android:paddingHorizontal="20dp"
        android:textColor="#888888"
        android:textColorHint="@color/HindTextField"
        app:layout_constraintTop_toBottomOf="@id/edtEmailSignup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtPasswordSignup"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/rounded_edittext_background"
        android:backgroundTint="@color/ThemeTextField"
        android:ems="10"
        android:hint="@string/SignUp_password_hint"
        android:inputType="textPassword"
        android:paddingHorizontal="20dp"
        android:textColor="#888888"
        android:textColorHint="@color/HindTextField"
        app:layout_constraintTop_toBottomOf="@id/edtPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtPasswordValidation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:text="@string/SignUp_requitePassword_hint"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/edtPasswordSignup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtRepassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/rounded_edittext_background"
        android:backgroundTint="@color/ThemeTextField"
        android:ems="10"
        android:hint="@string/SignUp_repassword"
        android:inputType="textPassword"
        android:paddingHorizontal="20dp"
        android:textColor="#888888"
        android:textColorHint="@color/HindTextField"
        app:layout_constraintTop_toBottomOf="@id/txtPasswordValidation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtCountry"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/rounded_edittext_background"
        android:backgroundTint="@color/ThemeTextField"
        android:ems="10"
        android:hint="@string/SignUp_location_hint"
        android:inputType="text"
        android:paddingHorizontal="20dp"
        android:textColor="#888888"
        android:textColorHint="@color/HindTextField"
        app:layout_constraintTop_toBottomOf="@id/edtRepassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp"
        android:background="@color/ThemeButton"
        android:text="@string/SignUp_title_textview"
        android:textColor="@color/TextButtonColor"
        app:layout_constraintTop_toBottomOf="@id/edtCountry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/btnSignup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="40dp">

        <TextView
            android:id="@+id/txtQuestionAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/SignUp_question_textview" />

        <TextView
            android:id="@+id/txtNextSignin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:onClick="onTextViewClicked"
            android:paddingHorizontal="5dp"
            android:text="@string/SignUp_SignIn_textview"
            android:textColor="@color/ThemeButton" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>